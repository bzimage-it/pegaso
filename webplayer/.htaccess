# Disable directory browsing
Options -Indexes

# Custom error page for directory access
ErrorDocument 403 "<html><body><h1>Access Denied</h1><p>Directory browsing is not allowed. Please use the web player interface.</p></body></html>"

# Deny access to .htaccess files
<Files ".htaccess">
    Order allow,deny
    Deny from all
</Files>

# Deny access to info.json files (optional - remove if you want them accessible)
<Files "info.json">
    Order allow,deny
    Deny from all
</Files>

# Redirect audio file requests to serve_audio.php
RewriteEngine On
RewriteRule ^media/.*\.(aac|m4a|mp3|wav|ogg|flac|mp4)$ serve_audio.php [L,QSA]


